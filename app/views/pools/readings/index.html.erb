<p id="notice"><%= notice %></p>

<h1>Readings</h1>

<table>
  <thead>
    <tr>
      <th>Datetime</th>
      <th>Ph</th>
      <th>Alkalinity</th>
      <th>Chlorine</th>
      <th>Stabilizer</th>
      <th>Pool</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @readings.each do |reading| %>
      <tr>
        <td><%= reading.datetime %></td>
        <td><%= reading.ph %></td>
        <td><%= reading.alkalinity %></td>
        <td><%= reading.chlorine %></td>
        <td><%= reading.stabilizer %></td>
        <td><%= reading.pool %></td>
        <td><%= link_to 'Show', reading %></td>
        <td><%= link_to 'Edit', edit_reading_path(reading) %></td>
        <td><%= link_to 'Destroy', reading, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

